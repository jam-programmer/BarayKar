
<!DOCTYPE html>
<html lang="fa" class="light-style layout-navbar-fixed layout-menu-fixed" dir="rtl" 
data-theme="theme-default" data-assets-path="~/assets/" 
data-template="vertical-menu-template-no-customizer">
  <head>
   <partial name="Partial/_HeadTags.cshtml"/>
   @await RenderSectionAsync("Style",false)
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
            <partial name="Partial/_Aside.cshtml" />
      
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

                <partial name="Partial/_Navbar.cshtml" />
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

           @RenderBody()
            <!-- / Content -->

            <!-- Footer -->
                    <partial name="Partial/_Footer.cshtml" />
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>

      <!-- Drag Target Area To SlideIn Menu On Small Screens -->
      <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <partial name="Partial/_Scripts.cshtml" />
    @await RenderSectionAsync("Script", false)
  </body>
</html>
@model Application.Cqrs.Province.UpdateProvinceCommand
@{
    ViewData["Title"] = "ویرایش استان";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {

    <script src="~/assets/js/upload.js"></script>

    <partial name="_ValidationScriptsPartial" />
}
<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="lh-1-85 breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">پیشخوان</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Province" asp-action="Index">مدیریت استان و شهر‌ها‌‌</a>
                </li>
                <li class="breadcrumb-item active">ویرایش استان‌ </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-6 col-xl-6 col-lg-6 col-sm-12 offset-xl-3 offset-lg-3 offset-md-3">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="Province" asp-action="Edit" enctype="multipart/form-data">
                    <h5 class="card-header heading-color">ویرایش استان </h5>
                    @if (ViewBag.Alert != null)
                    {
                        <div class="mx-3 alert alert-warning">@ViewBag.Alert</div>
                    }
                    <div class="card-body demo-vertical-spacing demo-only-element">

                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">

                                <div class="avatar avatar-xl">
                                    @if (Model.ImagePath == "defaultAvatar.jpg" || Model.ImagePath == "notFound.jpg")
                                    {
                                        <img id="imagePath_1" src="~/Gallery/defaultAvatar.jpg" class="rounded-circle">
                                    }
                                    else
                                    {
                                        <img id="imagePath_1" src="~/Gallery/Province/@Model.ImagePath" class="rounded-circle">

                                    }
                                </div>
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">آپلود تصویر</label>
                                    <input class="form-control" asp-for="ImageFile" onchange="ChangeImage(this,1)" type="file" id="formFile">
                                </div>
                                <input type="hidden" asp-for="Id"/>
                                <input type="hidden" asp-for="ImagePath"/>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                <div>
                                    <label class="form-label">نام استان‌  </label>
                                    <input asp-for="Name" type="text" class="form-control"
                                           placeholder="نام استان‌ " aria-describedby="defaultFormControlHelp">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>








                        </div>



                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm rounded-pill btn-success">ثبت</button>
                        <a asp-area="Admin" asp-controller="Province" asp-action="Index" class="btn btn-sm rounded-pill btn-warning text-white">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
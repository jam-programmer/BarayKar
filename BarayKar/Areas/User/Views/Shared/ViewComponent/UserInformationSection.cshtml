@model UserInformationViewModel

<div class="col-sm-4 col-md-3 col-lg-2">
    <div class="dash-avatar">
        <a href="#">

            @if (Model.Avatar == "defaultAvatar.jpg" || Model.Avatar == "notFound.jpg")
            {
                <img src="~/Gallery/defaultAvatar.jpg" >
            }
            else
            {
                <img src="~/Gallery/User/@Model.Avatar">
            }
          
        </a>
    </div>
</div>
<div class="col-sm-8 col-md-9 col-lg-3">
    <div class="dash-intro">
        <h4>
          @Model.FirstName  @Model.LastName
        </h4>
        <h5>@Model.UserName</h5>
    </div>
    <ul class="dash-meta">
        <li>
            <i class="fas fa-phone-alt"></i>
            <span>
                @Model.PhoneNumber
            </span>
        </li>
        <li>
            <i class="fas fa-envelope"></i>
            <span>
                @Model.Email
            </span>
        </li>
      
    </ul>
</div>

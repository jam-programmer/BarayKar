@model SignUpRecord
@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Script {

    <partial name="_ValidationScriptsPartial" />
}
<section style="background-image:url('/assets/img/pages/profile-banner.png')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 ">
                <div class="text-center mt-5 mb-5">
                    <h2 class="text-white">  ثبت نام </h2>
                    <ol class="breadcrumb text-center justify-content-center mt-5">
                        <li class="breadcrumb-item text-white"><a href="/">صفحه اصلی</a></li>
                        <li class="breadcrumb-item text-white" aria-current="page">ثبت نام</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>


<section>
    <div class="container">
        <div class="row mt-5 mb-5 justify-content-lg-center justify-content-xl-center">
            <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-warning">@ViewBag.Alert</div>
                }
                <div class="card shadow justify-content-center">
                    <div class="card-header text-center">
                        <h3>به خانواده برای کار بپیوندید</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="SignUp" asp-controller="Identity" method="POST">
                            <div class="form-group">
                                <label for="exampleInputEmail1">نام </label>
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="نام را وارد کنید">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">نام خانوادگی </label>
                                <input type="text" asp-for="LastName" class="form-control" placeholder="نام خانوادگی را وارد کنید">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">کد ملی </label>
                                <input type="text" asp-for="UserName" class="form-control" placeholder="کدملی خود را وارد کنید">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> ایمیل </label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="ایمیل را وارد کنید">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> شماره موبایل </label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="شماره موبایل را وارد کنید">
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">رمز عبور</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور را وارد کنید">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="bg-primary btn btn-sm text-white">ورود</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
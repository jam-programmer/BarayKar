@model Application.Cqrs.BusinessPicture.UpdateBusinessPictureCommand

@{
    ViewData["Title"] = "ویرایش تصویر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {
    <script src="~/assets/js/upload.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="lh-1-85 breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">پیشخوان</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="BusinessPicture" asp-action="Index" asp-route-parentId="@Model.BusinessId">مدیریت تصاویر‌‌‌</a>
                </li>
                <li class="breadcrumb-item active">ویرایش تصویر‌ </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-6 col-xl-6 col-lg-6 col-sm-12 offset-xl-3 offset-lg-3 offset-md-3">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="BusinessPicture" asp-action="Edit" enctype="multipart/form-data">
                    <h5 class="card-header heading-color">ویرایش تصویر </h5>
                    @if (ViewBag.Alert != null)
                    {
                        <div class="mx-3 alert alert-warning">@ViewBag.Alert</div>
                    }
                    <div class="card-body demo-vertical-spacing demo-only-element">
                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">

                                <div class="avatar avatar-xl">
                                    @if (Model.ImagePath == "defaultAvatar.jpg" || Model.ImagePath == "notFound.jpg")
                                    {
                                        <img id="imagePath_1" src="~/Gallery/defaultAvatar.jpg" class="rounded-circle">
                                    }
                                    else
                                    {
                                        <img id="imagePath_1" src="~/Gallery/Business/@Model.ImagePath" class="rounded-circle">
                                    }
                                    
                                </div>
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">آپلود تصویر</label>
                                    <input class="form-control" asp-for="ImageFile" onchange="ChangeImage(this,1)" type="file" id="formFile">
                                </div> <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                <div>
                                    <label class="form-label">عنوان تصویر </label>
                                    <input asp-for="Title" type="text" class="form-control"
                                           placeholder="‌عنوان تصویر" aria-describedby="defaultFormControlHelp">
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                <div>
                                    <label class="form-label">متن جایگزین تصویر </label>
                                    <input asp-for="Alt" type="text" class="form-control"
                                           placeholder="‌متن جایگزین تصویر" aria-describedby="defaultFormControlHelp">
                                    <span class="text-danger" asp-validation-for="Alt"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="BusinessId" />
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ImagePath" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm rounded-pill btn-success">ثبت</button>
                        <a asp-area="Admin" asp-controller="BusinessPicture" asp-action="Index"
                           asp-route-parentId="@Model.BusinessId"
                           class="btn btn-sm rounded-pill btn-warning text-white">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
